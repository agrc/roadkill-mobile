{
  "cli": {
    "version": ">= 2.1.0"
  },
  "build": {
    "base": {
      "android": {
        "image": "latest"
      },
      "ios": {
        "image": "latest"
      },
      "env": {
        "GOOGLE_SERVICES_ANDROID": "google-services.json",
        "GOOGLE_SERVICES_IOS": "GoogleService-Info.plist"
      },
      "cache": {
        "key": "clear-1"
      }
    },
    "development": {
      "extends": "base",
      "developmentClient": true,
      "distribution": "internal",
      "releaseChannel": "default",
      "android": {
        "buildType": "apk"
      },
      "env": {
        "ENVIRONMENT": "development"
      }
    },
    "simulator-dev": {
      "extends": "base",
      "developmentClient": true,
      "distribution": "internal",
      "releaseChannel": "default",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": true
      },
      "env": {
        "ENVIRONMENT": "development"
      }
    },
    "staging": {
      "extends": "base",
      "distribution": "store",
      "releaseChannel": "staging-v3",
      "android": {
        "buildType": "app-bundle"
      },
      "env": {
        "ENVIRONMENT": "staging"
      }
    },
    "production": {
      "extends": "base",
      "distribution": "store",
      "releaseChannel": "production-v3",
      "android": {
        "buildType": "app-bundle"
      },
      "env": {
        "ENVIRONMENT": "production"
      }
    }
  }
}
