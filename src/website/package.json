{
  "name": "wvc-reporter-website",
  "version": "1.0.0",
  "private": true,
  "description": "Website for the WVC Reporter",
  "license": "MIT",
  "sideEffects": false,
  "author": "Scott Davis <stdavis@utah.gov>",
  "scripts": {
    "build:css": "tailwindcss -o ./app/tailwind.css",
    "build": "cross-env NODE_ENV=production npm run build:css && remix build",
    "dev:css": "tailwindcss -o ./app/tailwind.css --watch",
    "lint": "eslint . --ignore-path .gitignore --ext .js,.jsx",
    "postinstall": "remix setup node",
    "serve": "cross-env NODE_ENV=production remix-serve build",
    "start": "cross-env NODE_ENV=development PORT=3002 concurrently \"npm run dev:css\" \"remix dev\""
  },
  "dependencies": {
    "@remix-run/react": "^1.2.3",
    "@remix-run/serve": "^1.2.3",
    "cross-env": "^7.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.2.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.2.3",
    "@remix-run/eslint-config": "^1.2.3",
    "concurrently": "^7.0.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.5.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "tailwindcss": "^3.0.23"
  },
  "engines": {
    "node": ">=14"
  }
}
